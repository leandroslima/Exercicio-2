<div class="container">
  <div class="row" style='margin-top: 10px'>
    <div class="col-8">
      <div class="row text-center">
        <p><%= Apartment.count %> Furnished apartments for rent in <strong>SÃ£o Paulo</strong></p>
      </div>
      <div class='row'>
        <% @apartments.each do |apartment| %>
          <div class="col-sm-6">
            <%= link_to apartment_path(apartment) do %>
              <div class="card mb-3" style='width: 20rem; height:25rem'>
                <%= image_tag apartment.cover_photo %>
                <div class="card-body">
                  <h5 class="card-title"><%= apartment.neighborhood %></h5>
                  <h3 class="card-subtitle text-truncate"><%= apartment.address %></h3>
                  <p class="card-text"><%= apartment.number_of_bedrooms %> bedroom(s)<strong> . </strong><%= apartment.number_of_bedrooms %> bathroom(s)
                  <h3 class="card-text">from <i class="fa-solid fa-brazilian-real-sign"></i><%= apartment.price_per_month %><small class='text-muted'>/mo</small></h3>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="col-4">
        <div class="right-image-index">
          <%= image_tag "map", alt: "Static Map", height: 1000 %>
        </div>
    </div>
  </div>
</div>
